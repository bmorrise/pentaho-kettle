<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:pen="http://www.pentaho.com/xml/schemas/pentaho-blueprint"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd"
           default-timeout="20000" default-activation="eager">

  <reference id="metastoreLocator"
             interface="org.pentaho.osgi.metastore.locator.api.MetastoreLocator"
             availability="optional"/>

  <service id="VFSConnectionPlugin"
           interface="org.ops4j.pax.web.extender.whiteboard.ResourceMapping">
    <bean class="org.ops4j.pax.web.extender.whiteboard.runtime.DefaultResourceMapping">
      <property name="alias" value="/${project.artifactId}/${project.version}"/>
      <property name="path" value="/app"/>
    </bean>
  </service>

  <bean id="VFSConnectionTreeDelegateExtension" scope="singleton"
        class="org.pentaho.di.vfs.ui.VFSConnectionTreeDelegateExtension">
    <pen:di-plugin type="org.pentaho.di.core.extension.ExtensionPointPluginType" />
  </bean>

  <bean id="VFSConnectionPopupMenuExtension" scope="singleton"
        class="org.pentaho.di.vfs.ui.VFSConnectionPopupMenuExtension">
    <pen:di-plugin type="org.pentaho.di.core.extension.ExtensionPointPluginType" />
  </bean>

  <bean id="VFSConnectionLifecycleListener"
        class="org.pentaho.di.vfs.ui.VFSConnectionLifecycleListener">
    <argument ref="metastoreLocator"/>
    <pen:di-plugin type="org.pentaho.di.core.plugins.LifecyclePluginType" />
  </bean>

</blueprint>
