<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:pen="http://www.pentaho.com/xml/schemas/pentaho-blueprint"
           xmlns:jaxrs="http://cxf.apache.org/blueprint/jaxrs" default-timeout="20000">

  <!-- HttpService Whiteboard registration of web assets -->
  <service id="FileOpenSavePlugin"
           interface="org.ops4j.pax.web.extender.whiteboard.ResourceMapping">
    <bean class="org.ops4j.pax.web.extender.whiteboard.runtime.DefaultResourceMapping">
      <property name="alias" value="/${project.artifactId}/${project.version}"/>
      <property name="path" value="/app"/>
    </bean>
  </service>

  <bean id="repositoryBrowserController" scope="singleton"
        class="org.pentaho.repo.controller.RepositoryBrowserController">
  </bean>

  <bean id="combinedBrowserController" scope="singleton" class="org.pentaho.repo.controller.CombinedBrowserController">
    <argument ref="fileProviders"/>
  </bean>

  <bean id="VFSFileProvider" scope="singleton" class="org.pentaho.repo.provider.vfs.VFSFileProvider" />
  <bean id="RepositoryFileProvider" scope="singleton" class="org.pentaho.repo.provider.repository.RepositoryFileProvider">
    <argument ref="repositoryBrowserController"/>
  </bean>
  <bean id="LocalFileProvider" scope="singleton" class="org.pentaho.repo.provider.local.LocalFileProvider" />

  <service id="VFSFileProviderService" ref="VFSFileProvider" interface="org.pentaho.repo.provider.FileProvider"/>
  <service id="RepositoryFileProviderService" ref="RepositoryFileProvider" interface="org.pentaho.repo.provider.FileProvider"/>
  <service id="LocalFileProviderService" ref="LocalFileProvider" interface="org.pentaho.repo.provider.FileProvider"/>

  <jaxrs:server address="/browser" id="browser-endpoint">
    <jaxrs:serviceBeans>
      <bean class="org.pentaho.repo.endpoint.RepositoryBrowserEndpoint">
        <argument ref="repositoryBrowserController"/>
        <argument ref="combinedBrowserController"/>
      </bean>
    </jaxrs:serviceBeans>

    <jaxrs:extensionMappings>
      <entry key="json" value="application/json"/>
    </jaxrs:extensionMappings>

    <jaxrs:providers>
      <bean class="com.fasterxml.jackson.jaxrs.json.JacksonJsonProvider"/>
    </jaxrs:providers>

  </jaxrs:server>

  <bean id="RepositoryOpenSaveExtensionPoint" scope="singleton"
        class="org.pentaho.repo.extension.RepositoryOpenSaveExtensionPoint">
    <pen:di-plugin type="org.pentaho.di.core.extension.ExtensionPointPluginType"/>
  </bean>

  <reference-list id="fileProviders"
                  interface="org.pentaho.repo.provider.FileProvider" availability="optional"/>

</blueprint>
